<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity3">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginEnd="104dp"
        android:layout_marginRight="104dp"
        android:text="Vali oma lemmik puuvili: "
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textStyle="bold" />

    <RadioGroup
        android:id="@+id/radio_grupp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="460dp">

        <RadioButton
            android:id="@+id/radioButton_banaan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="true"
            android:onClick="checkButton"
            android:text="Banaan"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/textColorGreyGreen"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/radioButton_virsik"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="checkButton"
            android:text="Virsik"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/textColorGreyGreen"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/radioButton_ananass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="checkButton"
            android:text="Ananass"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/textColorGreyGreen"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/radioButton_apelsin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="checkButton"
            android:text="Apelsin"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/textColorGreyGreen"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/radioButton_melon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="checkButton"
            android:text="Melon"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/textColorGreyGreen"
            android:textStyle="bold" />

    </RadioGroup>

    <TextView
        android:id="@+id/text_selected"
        android:layout_width="272dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_submit"
        android:text="Sinu poolt valitud puuvili on: "
        android:textColor="@android:color/black"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:background="@color/colorAccent"
        android:textColor="@android:color/background_light"
        android:textStyle="bold"
        android:text="SUBMIT" />

    <TextView
        android:id="@+id/text_conditions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_selected"
        android:text="@string/conditions"
        android:textColor="@android:color/black"
        android:layout_marginTop="10dp"
        android:textSize="20sp" />

    <CheckBox
        android:id="@+id/checkbox_agree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/agree"
        android:textSize="20sp"
        android:layout_below="@+id/text_conditions"
        android:layout_marginTop="10dp"

        />

    <Button
        android:id="@+id/btn_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkbox_agree"
        android:layout_centerHorizontal="true"
        android:background="@color/colorAccent"
        android:text="GO TO NEXT PAGE"
        android:textColor="@android:color/black"
        android:textStyle="bold" />
</RelativeLayout>